<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.example.entereventsproject.Activities.PaypalActivity" >
    <LinearLayout
        android:id="@+id/wrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:background="@drawable/fondoentrada">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/black">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="0."
                    android:text="Cantidad de Entradas:"
                    android:textColor="#FE7558"
                    android:textSize="25dp" />

                <EditText
                android:id="@+id/cant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="1"
                android:layout_weight="13"
                android:textColor="@android:color/white"
                android:textAlignment="center"
                android:inputType="phone"
                android:textSize="25dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="0."
                        android:text="Fecha:"
                        android:textColor="#FE7558"
                        android:textSize="25dp" />

                    <TextView
                        android:id="@+id/fecha"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:text="01/12/2000"
                        android:longClickable="true"
                        android:layout_marginLeft="30dp"
                        android:layout_weight="10"
                        android:textColor="@android:color/black"
                        android:textAlignment="center"
                        android:inputType="phone"
                        android:textSize="25dp" />


                </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="0."
                    android:text="Hora:"
                    android:textColor="#FE7558"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/hora"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:text="20-19"
                    android:longClickable="true"
                    android:layout_weight="10"
                    android:textColor="@android:color/black"
                    android:textAlignment="center"
                    android:inputType="phone"
                    android:textSize="25dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="0."
                    android:text="Precio/Unidad:"
                    android:textColor="#FE7558"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/precio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:text="8â‚¬"
                    android:layout_marginLeft="30dp"
                    android:layout_weight="10"
                    android:textColor="@android:color/black"
                    android:inputType="phone"
                    android:textSize="25dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="0."
                    android:text="Descripcion:"
                    android:textColor="#FE7558"
                    android:textSize="25dp" />
            </LinearLayout>
            <TextView
                android:id="@+id/descripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:longClickable="true"
                android:scrollbars="vertical"
                android:ems="10"
                android:inputType="textMultiLine"
                android:text="En la entrada no incluye los guantes,en la misma taquilla podeis comprarlos. La sesion es de una hora,
VENID A PROBARLA! "
                android:layout_marginLeft="10dp"
                android:textColor="@android:color/black"
                android:textSize="25dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#FE7558"
                android:onClick="onBuyPressed">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/paypal"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
